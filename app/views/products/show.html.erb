<h1><%= @product.name %></h1>
<h2><%= @product.cost %></h2>
<h3><%= @product.country_of_origin %></h3>

<% if @product.reviews.any? %>
  <h4>Product Reviews:</h4>
  <% @product.reviews.each do |review| %>
  <ul>
    <li>
      <p> <%= review.rating %> out of 5 stars </p>
      <%= review.content_body %> -<%= review.author %> <br>
    </li>
  </ul>
  <% end %>
  <% else %>
    <p>There are no reviews for this product yet</p>
  <% end %>

<p><%= link_to "Add a review", new_product_review_path(@product) %></p>
<p><%= link_to "Edit", edit_product_path(@product)%></p>
<p><%= link_to "Delete #{@product.name}", product_path(@product),
        :data => {:confirm => "Are you sure?", :method => "delete"} %></p>
<p><%= link_to "Return to products", all_products_path %></p>
