<%= render "layouts/errors", :object => @product %>

<%= form_for @product do |f| %>
  <div class="field">
    <%= f.label :name %> <br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :cost %> <br>
    <%= f.text_field :cost %>
  </div>

  <div class="field">
    <%= f.label :country_of_origin %> <br>
    <%= f.text_field :country_of_origin %>
  </div>
  <div class="actions">
    <%= f.submit "Create Product" %>
  </div>
<% end %>
